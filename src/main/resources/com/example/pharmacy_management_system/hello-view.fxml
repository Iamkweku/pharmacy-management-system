
<!-- FXML file for the main view of the pharmacy management system -->
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.pharmacy_management_system.HelloController">
    
    
    <!-- Padding settings for the VBox -->
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

  <!-- Label to display a welcome message -->
    <Label fx:id="welcomeText"/>
    
      <!-- Button to trigger the "onHelloButtonClick" method in the HelloController -->
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
</VBox>
